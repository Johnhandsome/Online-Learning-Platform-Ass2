@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.IndexModel

@{
    ViewData["Title"] = "Learn Without Limits - LearnHub";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">Learn without limits</h1>
                    <p class="hero-description">
                        Start, switch, or advance your career with thousands of courses, 
                        Professional Certificates, and degrees from world-class universities and companies.
                    </p>
                    <div class="hero-buttons">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-page="/Assessment/Start" class="btn btn-primary btn-lg">
                                <i class="bi bi-clipboard-check me-2"></i>
                                Take Skill Assessment
                            </a>
                            <a asp-page="/Index" asp-route-viewAll="true" class="btn btn-outline-secondary btn-lg">Explore Courses</a>
                        }
                        else
                        {
                            <a asp-page="/User/Register" class="btn btn-primary btn-lg">Get Started Free</a>
                            <a asp-page="/Assessment/Start" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-play-circle me-2"></i>
                                Try Assessment
                            </a>
                        }
                    </div>
                    
                    <!-- Trust indicators -->
                    <div class="hero-trust">
                        <div class="trust-stats">
                            <div class="stat-item">
                                <span class="stat-number">50K+</span>
                                <span class="stat-label">Students</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">1000+</span>
                                <span class="stat-label">Courses</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">4.8</span>
                                <span class="stat-label">? Rating</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image-container">
                    <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=600&h=400&fit=crop&crop=faces" 
                         alt="Students learning together" 
                         class="hero-image img-fluid">
                    
                    <!-- Floating elements -->
                    <div class="floating-card assessment-card">
                        <div class="card-icon">
                            <i class="bi bi-clipboard-check"></i>
                        </div>
                        <div class="card-content">
                            <h6>Skill Assessment</h6>
                            <p>Get personalized recommendations</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Assessment CTA Section (for authenticated users) -->
@if (User.Identity?.IsAuthenticated == true)
{
    <section class="assessment-banner">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="banner-content">
                        <div class="banner-icon">
                            <i class="bi bi-stars"></i>
                        </div>
                        <div>
                            <h4>Discover Your Perfect Learning Path</h4>
                            <p>Take our 5-minute assessment to get personalized course recommendations tailored to your goals and skill level.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a asp-page="/Assessment/Start" class="btn btn-warning btn-lg">
                        <i class="bi bi-lightning-charge me-2"></i>
                        Start Assessment
                    </a>
                </div>
            </div>
        </div>
    </section>
}

<!-- Category Pills -->
<section class="category-section">
    <div class="container">
        <div class="category-pills">
            <a href="@Url.Page("/Index")" class="category-pill @(string.IsNullOrEmpty(Model.SelectedCategory) && !Model.ViewAll ? "active" : "")">Featured</a>
            <a href="@Url.Page("/Index", new { viewAll = "true" })" class="category-pill @(Model.ViewAll ? "active" : "")">All Courses</a>
            <a href="@Url.Page("/Index", new { category = "Web Development" })" class="category-pill @(Model.SelectedCategory == "Web Development" ? "active" : "")">Web Development</a>
            <a href="@Url.Page("/Index", new { category = "Data Science" })" class="category-pill @(Model.SelectedCategory == "Data Science" ? "active" : "")">Data Science</a>
            <a href="@Url.Page("/Index", new { category = "Design" })" class="category-pill @(Model.SelectedCategory == "Design" ? "active" : "")">Design</a>
            <a href="@Url.Page("/Index", new { category = "Business" })" class="category-pill @(Model.SelectedCategory == "Business" ? "active" : "")">Business</a>
        </div>
    </div>
</section>

<!-- Dynamic Courses Section -->
<section class="courses-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">
                @if (!string.IsNullOrEmpty(Model.SelectedCategory))
                {
                    @($"{Model.SelectedCategory} Courses")
                }
                else if (Model.ViewAll)
                {
                    @("All Courses")
                }
                else
                {
                    @("Featured Courses")
                }
            </h2>
            <p class="section-subtitle">
                @if (!string.IsNullOrEmpty(Model.SelectedCategory))
                {
                    @($"Master {Model.SelectedCategory.ToLower()} with expert-led courses")
                }
                else
                {
                    @("Explore our top-rated courses from industry experts")
                }
            </p>
        </div>

        @if (Model.Courses.Any())
        {
            <div class="courses-grid">
                @foreach (var course in Model.Courses)
                {
                    <div class="course-card">
                        <div class="course-image">
                            @if (!string.IsNullOrEmpty(course.ImageUrl))
                            {
                                <img src="@course.ImageUrl" alt="@course.Title" loading="lazy">
                            }
                            else
                            {
                                <div class="course-placeholder">
                                    <i class="bi bi-play-circle"></i>
                                </div>
                            }
                            @if (course.IsFeatured)
                            {
                                <span class="course-badge">Featured</span>
                            }
                        </div>
                        <div class="course-content">
                            <div class="course-category">@course.CategoryName</div>
                            <h3 class="course-title">
                                <a asp-page="/Course/Details" asp-route-id="@course.Id">@course.Title</a>
                            </h3>
                            <p class="course-instructor">@course.InstructorName</p>
                            <div class="course-rating">
                                <div class="stars">
                                    <span>@course.RatingDisplay</span>
                                </div>
                                <span class="rating-text">(@course.Rating.ToString("F1"))</span>
                            </div>
                            <p class="course-description">@course.Description</p>
                            <div class="course-footer">
                                <span class="course-price">@course.FormattedPrice</span>
                                <a asp-page="/Course/Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">
                                    View Course
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            @if (Model.Courses.Count >= 6 && !Model.ViewAll)
            {
                <div class="text-center mt-5">
                    <a asp-page="/Index" asp-route-viewAll="true" class="btn btn-primary btn-lg">
                        View All Courses
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-search"></i>
                </div>
                <h4>No courses found</h4>
                <p>We're working hard to add more courses in this category.</p>
                <a asp-page="/Index" class="btn btn-primary">Browse All Categories</a>
            </div>
        }
    </div>
</section>

<!-- Learning Paths -->
<section class="learning-paths-section">
    <div class="container">
        <div class="section-header-with-action">
            <div>
                <h2 class="section-title">Learning Paths</h2>
                <p class="section-subtitle">Structured programs to achieve your goals faster</p>
            </div>
            <a asp-page="/LearningPath/Browse" class="btn btn-outline-primary">
                View All Paths
                <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>

        <div class="learning-paths-grid">
            @if (Model.FeaturedPaths.Any())
            {
                @foreach (var path in Model.FeaturedPaths.Take(2))
                {
                    <div class="learning-path-card">
                        <div class="path-header">
                            <div class="path-badge">@path.BadgeText</div>
                            <h4 class="path-title">@path.Title</h4>
                            <p class="path-description">@path.Description</p>
                        </div>
                        
                        <div class="path-progress">
                            @for (int i = 0; i < Math.Min(3, path.CourseCount); i++)
                            {
                                <div class="progress-item @(i < 2 ? "completed" : "current")">
                                    <i class="bi bi-@(i < 2 ? "check-circle-fill" : "circle")"></i>
                                    <span>Course @(i + 1)</span>
                                </div>
                            }
                            @if (path.CourseCount > 3)
                            {
                                <div class="progress-more">
                                    <span>+@(path.CourseCount - 3) more courses</span>
                                </div>
                            }
                        </div>
                        
                        <div class="path-footer">
                            <div class="path-price">
                                <span class="price">@path.FormattedPrice</span>
                                <span class="courses-count">@path.CourseCount courses</span>
                            </div>
                            <a asp-page="/LearningPath/Details" asp-route-id="@path.Id" class="btn btn-primary">
                                Start Path
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Default/Placeholder Learning Paths -->
                <div class="learning-path-card">
                    <div class="path-header">
                        <div class="path-badge">Popular</div>
                        <h4 class="path-title">Full Stack Web Developer</h4>
                        <p class="path-description">Master both front-end and back-end development with modern technologies.</p>
                    </div>
                    
                    <div class="path-progress">
                        <div class="progress-item completed">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>HTML & CSS Fundamentals</span>
                        </div>
                        <div class="progress-item completed">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>JavaScript Essentials</span>
                        </div>
                        <div class="progress-item current">
                            <i class="bi bi-circle"></i>
                            <span>React Development</span>
                        </div>
                        <div class="progress-more">
                            <span>+4 more courses</span>
                        </div>
                    </div>
                    
                    <div class="path-footer">
                        <div class="path-price">
                            <span class="price">$299</span>
                            <span class="courses-count">7 courses</span>
                        </div>
                        <a asp-page="/LearningPath/Browse" class="btn btn-primary">
                            Start Path
                        </a>
                    </div>
                </div>
                
                <div class="learning-path-card">
                    <div class="path-header">
                        <div class="path-badge">New</div>
                        <h4 class="path-title">Data Science Mastery</h4>
                        <p class="path-description">From Python basics to machine learning and AI applications.</p>
                    </div>
                    
                    <div class="path-progress">
                        <div class="progress-item completed">
                            <i class="bi bi-check-circle-fill"></i>
                            <span>Python for Data Science</span>
                        </div>
                        <div class="progress-item current">
                            <i class="bi bi-circle"></i>
                            <span>Data Analysis & Visualization</span>
                        </div>
                        <div class="progress-item">
                            <i class="bi bi-circle"></i>
                            <span>Machine Learning</span>
                        </div>
                        <div class="progress-more">
                            <span>+3 more courses</span>
                        </div>
                    </div>
                    
                    <div class="path-footer">
                        <div class="path-price">
                            <span class="price">$399</span>
                            <span class="courses-count">6 courses</span>
                        </div>
                        <a asp-page="/LearningPath/Browse" class="btn btn-primary">
                            Start Path
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


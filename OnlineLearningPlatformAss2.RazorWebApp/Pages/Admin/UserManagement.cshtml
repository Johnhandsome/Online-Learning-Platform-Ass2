@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Admin.UserManagementModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">User Management</h2>
            <p class="text-muted">Manage user roles and account statuses.</p>
        </div>
        <a asp-page="/Admin/Dashboard" class="btn btn-link text-decoration-none">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-4 border-0 d-flex justify-content-between align-items-center">
            <div class="input-group w-50">
                <span class="input-group-text bg-light border-0"><i class="bi bi-search text-muted"></i></span>
                <input type="text" class="form-control bg-light border-0" placeholder="Search users by name or email...">
            </div>
            <button class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-person-plus me-2"></i>Add Internal User
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 border-0">User</th>
                            <th class="border-0">Email</th>
                            <th class="border-0">Role</th>
                            <th class="border-0">Status</th>
                            <th class="border-0">Joined</th>
                            <th class="text-end pe-4 border-0">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <span class="fw-bold text-primary">@user.Username[0].ToString().ToUpper()</span>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-0">@user.Username</h6>
                                            <span class="text-muted smaller">ID: @user.Id.ToString().Substring(0, 8)...</span>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <select class="form-select form-select-sm border-0 bg-light w-auto fw-semibold" 
                                            onchange="changeRole('@user.Id', this.value)" @(user.Username == "admin" ? "disabled" : "")>
                                        <option value="User" selected="@(user.RoleName == "User")">Learner</option>
                                        <option value="Instructor" selected="@(user.RoleName == "Instructor")">Instructor</option>
                                        <option value="Admin" selected="@(user.RoleName == "Admin")">Admin</option>
                                    </select>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Suspended</span>
                                    }
                                </td>
                                <td class="text-muted small">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm @(user.IsActive ? "btn-outline-danger" : "btn-outline-success") border-0" 
                                                onclick="toggleStatus('@user.Id')" @(user.Username == "admin" ? "disabled" : "")>
                                            <i class="bi @(user.IsActive ? "bi-person-x" : "bi-person-check") me-1"></i>
                                            @(user.IsActive ? "Suspend" : "Activate")
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary border-0" @(user.Username == "admin" ? "disabled" : "")>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    async function toggleStatus(id) {
        if(!confirm('Change this user status?')) return;
        const response = await fetch(`?handler=ToggleStatus&id=${id}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
        });
        if (response.ok) { location.reload(); }
    }

    async function changeRole(id, role) {
        if(!confirm(`Change user role to ${role}?`)) { location.reload(); return; }
        const response = await fetch(`?handler=ChangeRole&id=${id}&role=${role}`, {
            method: 'POST',
            headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
        });
        if (response.ok) { location.reload(); }
        else { alert('Failed to change role'); location.reload(); }
    }
</script>
}

@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">System Overview</h2>
            <p class="text-muted">Monitor your platform's health and growth.</p>
        </div>
        <div class="btn-group">
            <a asp-page="/Admin/CourseModeration" class="btn btn-outline-primary">
                <i class="bi bi-shield-check me-2"></i>Course Moderation
                @if (Model.Stats.PendingCourses > 0)
                {
                    <span class="badge bg-danger ms-2">@Model.Stats.PendingCourses</span>
                }
            </a>
            <a asp-page="/Admin/UserManagement" class="btn btn-outline-secondary">
                <i class="bi bi-people me-2"></i>User Management
            </a>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-currency-dollar text-primary fs-4"></i>
                    </div>
                    <h6 class="text-muted mb-0">Total Revenue</h6>
                </div>
                <h3 class="fw-bold mb-0">@Model.Stats.TotalRevenue.ToString("C")</h3>
                <p class="text-success small mb-0 mt-2"><i class="bi bi-graph-up me-1"></i>+12% from last month</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-people text-success fs-4"></i>
                    </div>
                    <h6 class="text-muted mb-0">Total Students</h6>
                </div>
                <h3 class="fw-bold mb-0">@Model.Stats.TotalUsers</h3>
                <p class="text-muted small mb-0 mt-2">@Model.Stats.TotalInstructors Instructors</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-info bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-book text-info fs-4"></i>
                    </div>
                    <h6 class="text-muted mb-0">Active Courses</h6>
                </div>
                <h3 class="fw-bold mb-0">@Model.Stats.TotalCourses</h3>
                <p class="text-muted small mb-0 mt-2">Across @Model.Stats.TotalEnrollments Enrollments</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-4 h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-3 me-3">
                        <i class="bi bi-hourglass-split text-warning fs-4"></i>
                    </div>
                    <h6 class="text-muted mb-0">Pending Reviews</h6>
                </div>
                <h3 class="fw-bold mb-0">@Model.Stats.PendingCourses</h3>
                <p class="text-warning small mb-0 mt-2">Requires your attention</p>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Orders -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-4 border-0">
                    <h5 class="fw-bold mb-0">Recent Transactions</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 border-0">Student</th>
                                    <th class="border-0">Item</th>
                                    <th class="border-0">Amount</th>
                                    <th class="border-0">Date</th>
                                    <th class="text-end pe-4 border-0">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Stats.RecentOrders)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-secondary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                    <span class="small fw-bold text-secondary">@order.Username[0].ToString().ToUpper()</span>
                                                </div>
                                                <span class="fw-semibold">@order.Username</span>
                                            </div>
                                        </td>
                                        <td>@order.ItemTitle</td>
                                        <td class="fw-bold">@order.Amount.ToString("C")</td>
                                        <td class="text-muted small">@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end pe-4">
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Completed</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Quick Actions</h5>
                    <div class="d-grid gap-3">
                        <button class="btn btn-light text-start py-3 px-4 border shadow-sm rounded-3">
                            <i class="bi bi-file-earmark-spreadsheet me-3 text-success"></i>Export Sales Report
                        </button>
                        <button class="btn btn-light text-start py-3 px-4 border shadow-sm rounded-3">
                            <i class="bi bi-envelope me-3 text-primary"></i>Broadcast Message
                        </button>
                        <button class="btn btn-light text-start py-3 px-4 border shadow-sm rounded-3">
                            <i class="bi bi-gear me-3 text-secondary"></i>System Settings
                        </button>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm bg-primary text-white p-4 overflow-hidden relative">
                <div class="position-relative z-index-1">
                    <h5 class="fw-bold">Need Help?</h5>
                    <p class="small opacity-75 mb-4">Check out our documentation for advanced system configurations.</p>
                    <a href="#" class="btn btn-white btn-sm rounded-pill px-4">Read Docs</a>
                </div>
                <i class="bi bi-shield-lock position-absolute bottom-0 end-0 display-1 opacity-10 mb-n3 me-n3"></i>
            </div>
        </div>
    </div>
</div>

<style>
    .z-index-1 { z-index: 1; }
    .btn-white { background-color: white; color: var(--bs-primary); border: none; }
    .btn-white:hover { background-color: #f8f9fa; }
</style>

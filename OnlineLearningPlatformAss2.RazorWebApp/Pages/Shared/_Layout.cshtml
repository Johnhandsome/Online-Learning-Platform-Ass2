</head>

<body>
<!-- Top Banner -->
<div class="top-banner">
  <div class="container">
    <div class="d-flex align-items-center justify-content-center">
      <i class="bi bi-stars me-2"></i>
      <span>New to learning? <a href="/Assessment/Start">Take our skill assessment</a> to get personalized recommendations!</span>
    </div>
  </div>
</div>

<!-- Navigation -->
<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white">
    <div class="container">
      <!-- Logo -->
      <a class="navbar-brand" asp-page="/Index">
        <i class="bi bi-mortarboard-fill"></i>
        LearnHub
      </a>
      
      <!-- Mobile Toggle -->
      <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <!-- Main Navigation -->
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
              Explore
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" asp-page="/Course/Browse">
                  <i class="bi bi-grid me-2"></i>Browse All Courses
                  <small class="d-block text-muted">Explore our complete course library</small>
                </a>
              </li>
              <li>
                <a class="dropdown-item" asp-page="/LearningPath/Browse">
                  <i class="bi bi-signpost-split me-2"></i>Learning Paths
                  <small class="d-block text-muted">Structured learning journeys</small>
                </a>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item" asp-page="/Assessment/Start">
                  <i class="bi bi-clipboard-check me-2"></i>Skill Assessment
                  <small class="d-block text-muted">Get personalized recommendations</small>
                </a>
              </li>
            </ul>
          </li>
        </ul>
        
        <!-- Search Bar -->
        <form class="d-none d-lg-flex me-3" method="get" asp-page="/Course/Browse" onsubmit="return handleSearchSubmit(event)">
          <div class="search-container">
            <i class="bi bi-search search-icon"></i>
            <input type="text" 
                   class="search-input" 
                   name="searchTerm" 
                   id="globalSearchInput"
                   placeholder="What do you want to learn?"
                   autocomplete="off">
          </div>
        </form>
        
        <!-- User Navigation -->
        <ul class="navbar-nav">
          @if (User.Identity?.IsAuthenticated == true)
          {
            <li class="nav-item">
              <a class="nav-link" asp-page="/Course/MyCourses">
                <i class="bi bi-journal-bookmark me-1"></i>My Learning
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" asp-page="/LearningPath/MyPaths">My Paths</a></li>
                <li><a class="dropdown-item" asp-page="/Order/MyOrders">My Orders</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-page="/User/Profile">My Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" asp-page="/User/Logout">Log Out</a></li>
              </ul>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link" asp-page="/User/Login">Log In</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-primary" asp-page="/User/Register">Join for Free</a>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- Main Content -->
<main>
  @if (TempData["SuccessMessage"] != null)
  {
    <div class="alert-container">
      <div class="container">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle-fill me-2"></i>
          @TempData["SuccessMessage"]
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    </div>
  }
  
  @RenderBody()
</main>


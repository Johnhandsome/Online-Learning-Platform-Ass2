@page "/Course/MyCourses"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Course.MyCoursesModel

@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-1">My Courses</h1>
        <p class="text-muted mb-0">Continue your learning journey</p>
    </div>
    <a asp-page="/Index" class="btn btn-outline-primary">
        <i class="bi bi-plus-lg me-1"></i>Browse Courses
    </a>
</div>

@if (Model.EnrolledCourses != null && Model.EnrolledCourses.Any())
{
    <div class="row g-4">
        @foreach (var course in Model.EnrolledCourses)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm" style="border-radius: 12px;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="badge bg-light text-dark">@course.CategoryName</span>
                            <span class="badge bg-success">Enrolled</span>
                        </div>
                        
                        <h5 class="fw-bold mb-2">@course.Title</h5>
                        <p class="text-muted small mb-3">@course.InstructorName</p>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold" style="color: #0056d2;">@course.Price.ToString("C")</span>
                            <a asp-page="/Course/Details" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                Continue Learning
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card border-0 shadow-sm text-center py-5" style="border-radius: 12px;">
        <div class="card-body">
            <i class="bi bi-journal-bookmark text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 fw-bold">No Courses Yet</h4>
            <p class="text-muted mb-4">Start learning by enrolling in a course.</p>
            <a asp-page="/Index" class="btn btn-primary" style="background: #0056d2; border: none;">
                <i class="bi bi-search me-1"></i>Browse Courses
            </a>
        </div>
    </div>
}

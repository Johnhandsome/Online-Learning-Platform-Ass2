@page "/Course/Details/{id:guid}"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Course.DetailsModel

@{
    ViewData["Title"] = Model.CourseDetails?.Title ?? "Course Details";
}

@if (Model.CourseDetails != null)
{
    <div class="container mt-5 mb-5">
        <div class="row">
            <!-- Course Header -->
            <div class="col-lg-8">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.CourseDetails.Title</li>
                    </ol>
                </nav>

                <div class="scroll-reveal">
                    <h1 class="display-5 fw-bold mb-3">@Model.CourseDetails.Title</h1>
                    <p class="lead text-muted mb-4">@Model.CourseDetails.Description</p>
                    
                    <div class="d-flex align-items-center gap-3 mb-4 flex-wrap">
                        <span class="badge badge-gradient-primary">@Model.CourseDetails.CategoryName</span>
                        <div class="d-flex align-items-center text-muted">
                            <i class="bi bi-person-circle me-2"></i>
                            <span>Instructor: <strong>@Model.CourseDetails.InstructorName</strong></span>
                        </div>
                    </div>
                </div>

                <!-- Course Content (Modules) -->
                <div class="card card-modern shadow-lg mb-4 scroll-reveal">
                    <div class="card-header" style="background: var(--gradient-primary); color: white;">
                        <h4 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Course Content
                        </h4>
                    </div>
                    <div class="list-group list-group-flush">
                        @if (Model.CourseDetails.Modules != null && Model.CourseDetails.Modules.Any())
                        {
                            var modulesList = Model.CourseDetails.Modules.ToList();
                            @for (int i = 0; i < modulesList.Count; i++)
                            {
                                var module = modulesList[i];
                                var moduleId = $"module-{i}";
                                
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h5 class="mb-0 fw-bold">
                                            <i class="bi bi-folder2-open text-primary me-2"></i>
                                            @module.Title
                                        </h5>
                                        <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#@moduleId">
                                            <i class="bi bi-chevron-down"></i>
                                        </button>
                                    </div>
                                    
                                    <div class="collapse show" id="@moduleId">
                                        <ul class="list-unstyled ms-4 mt-3">
                                            @foreach (var lesson in module.Lessons)
                                            {
                                                <li class="mb-2 d-flex align-items-center">
                                                    <i class="bi bi-play-circle-fill text-success me-2"></i>
                                                    <span>@lesson.Title</span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item text-center py-5 text-muted">
                                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                <p class="mt-3 mb-0">No content available yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar (Action) -->
            <div class="col-lg-4">
                <div class="card card-modern shadow-xl sticky-top scroll-reveal" style="top: 100px;">
                    @if (!string.IsNullOrEmpty(Model.CourseDetails.ImageUrl))
                    {
                        <div class="position-relative overflow-hidden" style="height: 200px;">
                            <img src="@Model.CourseDetails.ImageUrl" class="w-100 h-100 object-fit-cover" alt="@Model.CourseDetails.Title">
                            <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.3) 100%);"></div>
                        </div>
                    }
                    else
                    {
                        <div class="position-relative overflow-hidden" style="height: 200px; background: var(--gradient-primary);">
                            <div class="d-flex align-items-center justify-content-center h-100">
                                <i class="bi bi-book text-white" style="font-size: 4rem; opacity: 0.3;"></i>
                            </div>
                        </div>
                    }
                    
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <h2 class="text-gradient mb-0">@Model.CourseDetails.Price.ToString("C")</h2>
                            <small class="text-muted">One-time payment</small>
                        </div>
                        
                        <div class="d-grid gap-2 mb-4">
                            @if (Model.CourseDetails.IsEnrolled)
                            {
                                <a asp-page="/Course/MyCourses" class="btn btn-modern btn-lg" style="background: var(--gradient-success); color: white; border: none;">
                                    <i class="bi bi-play-circle-fill me-2"></i>Start Learning
                                </a>
                            }
                            else if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-page="/Order/ConfirmPurchase" asp-route-courseId="@Model.CourseDetails.Id" class="btn btn-gradient btn-modern btn-lg">
                                    <i class="bi bi-cart-plus-fill me-2"></i>Enroll Now
                                </a>
                            }
                            else
                            {
                                <a asp-page="/User/Login" asp-route-returnUrl="@Url.Page("/Course/Details", new { id = Model.CourseDetails.Id })" class="btn btn-outline-primary btn-modern btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Login to Enroll
                                </a>
                            }
                        </div>
                        
                        <div class="divider"></div>
                        
                        <div class="mt-4">
                            <h6 class="fw-bold mb-3">This course includes:</h6>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Full lifetime access
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Certificate of completion
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Access on mobile and desktop
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    30-day money-back guarantee
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="alert alert-danger">
            <h4>Course Not Found</h4>
            <p>The requested course could not be found.</p>
            <a asp-page="/Index" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
}

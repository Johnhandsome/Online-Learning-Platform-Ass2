@page "{id:guid?}"
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Instructor.EditCourseModel
@{
    bool isEdit = Model.CourseForm.Id != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Course" : "Create New Course";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-page="/Instructor/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@(isEdit ? "Edit Course" : "Create Course")</li>
                    </ol>
                </nav>
                <h2 class="fw-bold mb-0">@(isEdit ? "Edit Course" : "Create New Course")</h2>
            </div>

            <div class="card shadow-sm border-0 p-5">
                <form method="post">
                    <input type="hidden" asp-for="CourseForm.Id" />
                    
                    <div class="row g-4">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <label class="form-label fw-bold">Course Title</label>
                                <input asp-for="CourseForm.Title" class="form-control form-control-lg" placeholder="e.g. Master C# and .NET Core">
                                <span asp-validation-for="CourseForm.Title" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Description</label>
                                <textarea asp-for="CourseForm.Description" class="form-control" rows="10" 
                                          placeholder="Share what students will learn and achieve..."></textarea>
                                <span asp-validation-for="CourseForm.Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light border-0 p-4 mb-4">
                                <h6 class="fw-bold mb-3">Settings</h6>
                                
                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Category</label>
                                    <select asp-for="CourseForm.CategoryId" class="form-select">
                                        <option value="">Select a category</option>
                                        @foreach (var cat in Model.Categories)
                                        {
                                            <option value="@cat.Id">@cat.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CourseForm.CategoryId" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Price ($)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="CourseForm.Price" class="form-control" type="number" step="0.01">
                                    </div>
                                    <span asp-validation-for="CourseForm.Price" class="text-danger small"></span>
                                </div>

                                <div class="form-check form-switch mb-0">
                                    <input asp-for="CourseForm.IsFeatured" class="form-check-input" type="checkbox">
                                    <label class="form-check-label small fw-bold">Featured Course</label>
                                </div>
                            </div>

                            <div class="card bg-light border-0 p-4">
                                <h6 class="fw-bold mb-3">Course Image</h6>
                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Image URL</label>
                                    <input asp-for="CourseForm.ImageUrl" class="form-control mb-3" placeholder="https://unsplash.com/...">
                                    @if (!string.IsNullOrEmpty(Model.CourseForm.ImageUrl))
                                    {
                                        <img src="@Model.CourseForm.ImageUrl" class="rounded img-fluid shadow-sm" alt="Preview">
                                    }
                                    else
                                    {
                                        <div class="bg-white rounded d-flex align-items-center justify-content-center" style="aspect-ratio: 16/9;">
                                            <i class="bi bi-image text-muted display-4"></i>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                        <a asp-page="/Instructor/Dashboard" class="btn btn-link text-decoration-none text-muted">Cancel</a>
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">
                            <i class="bi bi-check-lg me-2"></i>Save Course
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

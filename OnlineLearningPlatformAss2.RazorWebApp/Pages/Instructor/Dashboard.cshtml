@page
@model OnlineLearningPlatformAss2.RazorWebApp.Pages.Instructor.DashboardModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">Instructor Dashboard</h2>
            <p class="text-muted mb-0">Manage your courses and track your performance.</p>
        </div>
        <a asp-page="/Instructor/EditCourse" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-lg me-2"></i>Create New Course
        </a>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4 bg-primary text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="mb-1 opacity-75">Total Students</p>
                        <h2 class="fw-bold mb-0">@Model.TotalStudents.ToString("N0")</h2>
                    </div>
                    <i class="bi bi-people display-6 opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="mb-1 text-muted">Course Rating</p>
                        <h2 class="fw-bold mb-0">@Model.AverageRating.ToString("F1") <small class="h6 text-warning"><i class="bi bi-star-fill"></i></small></h2>
                    </div>
                    <i class="bi bi-star display-6 text-warning opacity-50"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 p-4 bg-success text-white">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="mb-1 opacity-75">Total Earnings</p>
                        <h2 class="fw-bold mb-0">@Model.TotalEarnings.ToString("C")</h2>
                    </div>
                    <i class="bi bi-currency-dollar display-6 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- My Courses -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom-0">
            <h5 class="fw-bold mb-0">My Courses</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Course</th>
                        <th>Category</th>
                        <th>Students</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.MyCourses.Any())
                    {
                        @foreach (var course in Model.MyCourses)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@(course.ImageUrl ?? "https://via.placeholder.com/120x68")" 
                                             class="rounded me-3" style="width: 80px; height: 45px; object-fit: cover;">
                                        <span class="fw-bold text-truncate" style="max-width: 250px;">@course.Title</span>
                                    </div>
                                </td>
                                <td>@course.CategoryName</td>
                                <td>@course.StudentCount</td>
                                <td>@course.FormattedPrice</td>
                                <td><span class="badge bg-success bg-opacity-10 text-success">Published</span></td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-page="/Course/Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-secondary" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="/Instructor/EditCourse" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <p class="text-muted mb-3">You haven't created any courses yet.</p>
                                <a asp-page="/Instructor/EditCourse" class="btn btn-primary rounded-pill">Create Your First Course</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

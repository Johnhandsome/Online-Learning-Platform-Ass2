@model Online_Learning_Platform_Ass1.Service.DTOs.Course.CourseDetailViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <h2 class="mb-4">Checkout</h2>
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Course:</span>
                        <strong>@Model.Title</strong>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span>Price:</span>
                        <strong>@Model.Price.ToString("C")</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between h5">
                        <span>Total:</span>
                        <span class="text-primary">@Model.Price.ToString("C")</span>
                    </div>
                </div>
            </div>

            <!-- Payment Method Placeholder -->
            <div class="card mb-4">
                <div class="card-header">Payment Method</div>
                <div class="card-body">
                   <p>Mock Payment System (Credit Card)</p>
                   <!-- We can add a simple form here if needed, but for MVP just a button -->
                </div>
            </div>

            <form asp-action="ProcessCheckout" method="post" id="checkoutForm">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                        <span id="btnText">Confirm Purchase</span>
                        <span id="btnLoading" class="d-none">
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            Processing...
                        </span>
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link mt-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('checkoutForm').addEventListener('submit', function(e) {
        const btn = document.getElementById('submitBtn');
        const btnText = document.getElementById('btnText');
        const btnLoading = document.getElementById('btnLoading');
        
        // Prevent double submission
        if (btn.disabled) {
            e.preventDefault();
            return false;
        }
        
        // Disable button and show loading state
        btn.disabled = true;
        btnText.classList.add('d-none');
        btnLoading.classList.remove('d-none');
    });
</script>
